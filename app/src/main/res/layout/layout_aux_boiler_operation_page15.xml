<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/img1"
            android:src="@drawable/auxboiler_img8"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.40"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:text="The boiler is a complicated construction of steel tubes, pipes and drums."
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="0.60"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/auxboiler_img9"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.40"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="7dp"
            android:text="Water is circulating inside the pipes that are arranged as walls"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="0.60"/>

    </LinearLayout>
</LinearLayout>