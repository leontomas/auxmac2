<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageView
            android:id="@id/img1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/operationofgen_img1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.75"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:text="Synchonous Generator "
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="0.25"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageView
            android:id="@id/img2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/operationofgen_img2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.60"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView4"
            android:padding="10dp"
            android:text="The AC Synchonous Generator "
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="0.40"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Leonardo%20Tomas/Desktop/androidprojects/latest-material-design/material-design/app/src/main/res/layout/layout_operation_of_generator_page6.xml -->